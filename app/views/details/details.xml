<Page navigatedTo="navigatedTo">
	<ScrollView>
		<GridLayout rows="auto, auto, auto, auto, auto" cols="*,*,*">
			<StackLayout row="0">
				<Label text="{{ product.name }}" cssClass="text-centered text-huge bold" />
				<Image src="{{ product.picUrl }}" stretch="none" cssClass="centered" />
			</StackLayout>
			<StackLayout row="1" orientation="horizontal" cssClass="centered">
				<Label text="{{ product.nett }}" cssClass="text-big bold" />
				<Label text=" | " cssClass="text-big bold" />
				<Label text="{{ product.price | money() }}" cssClass="text-big bold" />
			</StackLayout>
			<StackLayout row="2">
				<Label text="{{ product.ingredients | asList() }}" textWrap="true" cssClass="text-centered text-small" />
				<Label id="description" text="{{ product.description }}" cssClass="text-small text-centered italic" textWrap="true" />
			</StackLayout>
			<StackLayout orientation="horizontal" row="3" cssClass="centered">
				<Button id="remove-btn" text="-" tap="removeOne" cssClass="bold text-big" />
				<Label text="{{ quantity }}" cssClass="text-big" verticalAlignment="center" />
				<Button id="add-btn" text="+" tap="addOne" cssClass="bold text-big" />
			</StackLayout>
			<StackLayout id="buttons" row="4" orientation="horizontal" cssClass="centered">
				<Button text="Back" tap="backToListView" />
				<Button text="Add to order" tap="addToOrder" />
			</StackLayout>
		</GridLayout>
	</ScrollView>
</Page>